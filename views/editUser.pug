extends layout2

block content
 header#main-header.py-2.bg-info.text-white
      .container
        .row
          .col-md-6
            h1
              i.fas.fa-user-edit
              |  Edit
 section#actions.py-4.mb-4.bg-light
      .container
        .row
          .col-md-3.mr-auto
            a.btn.btn-primary.btn-info(href='/dashboard')
              i.fa.fa-arrow-left
              |  Back To Dashboard
 section#post
      .container
        .row
          .col
            .card
              .card-header
                h4 Edit User
              .card-body
                form(method="post")
                  .form-group
                    label(for='name') Name
                    input.form-control(name="name" type='text' value=`${user.firstName}`)
                  .form-group
                    label(for='lastName') Surname
                    input.form-control(name="lastName" type='text' value=`${user.lastName}`)
                  .form-group
                    label(for='email') Email
                    input.form-control(name="email" type='email' value=`${user.emailAddress}`)
                  .form-group
                    label(for='password') Password
                    input.form-control(type='password', name="password" value=`${user.password}`)
                  .form-group
                    label(for='password') Confirm Password
                    input.form-control(name="password" type='password' value=`${user.password}`)
                    button.btn.btn-warning.mt-2(type="submit") Save Changes
 include partials/footer2