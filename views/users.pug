extends layout2

block content
 header#main-header.py-2.bg-warning.text-white
      .container
        .row
          .col-md-6
            h1
              i.fa.fa-users
              |  Users
 section.actions.py-4
 .col-md-6.ml-auto.mr-auto.mb-3
  .input-group
    input.form-control(type='text', placeholder='Search')
    span.input-group-btn
    button.btn.btn-warning.text-white Search
 section#action.py-4.mb-4
      .container
        .row
          .col
            .card
              .card-header
                h4 Latest Post
              table.table.table-striped.table-hover.small
                thead.thead-dark
                  tr
                    th(scope='col') First Name
                    th(scope='col') Email Address
                    th(scope='col') 
                    th(scope='col') 
                tbody
                  each user, index in users
                    tr
                      td= user.firstName
                      td= user.emailAddress
                      td
                        a.btn.btn-secondary(href=`post/edit/${user.id}`)
                          i.fa.fa-angle-double-right
                          |  Edit
                      td
                        a.btn.btn-secondary(href=`post/delete/${user.id}`)
                          i.fa.fa-remove
                          |  Delete
 include partials/footer