extends layout2

block content
 header#main-header.py-2.bg-primary.text-white
      .container
        .row
          .col-md-6
            h1
              i.fa.fa-user
              |  Edit Profile
 section#actions.py-4.mb-4.bg-light
      .container
        .row
          .col-md-3.mr-auto
            a.btn.btn-primary.btn-primary.mb-3(href='/blog-post')
              i.fa.fa-arrow-left
              |  Back to Blog
          .col-md-3.mr-auto
            a.btn.btn-warning.btn-block.mb-3.text-white(href='#', data-toggle='modal', data-target='#passwordModal')
              i.fa.fa-lock
              |  Change Password
          .col-md-3.mr-auto
            a.btn.btn-danger.btn-block.mb-3(href='#')
              i.fa.fa-remove
              |  Delete Account
 section#profile.mb-3
      .container
        .row
          .col-md-9
            .card
              .card-header
                h4 Edit Profile
              .card-body
                form
                  .form-group
                    label(for='title') Name
                    input.form-control(type='text', value='Goran')
                  .form-group
                    label(for='title') Email
                    input.form-control(type='text', value='email@gmail.com')
                  .form-group
                    label(for='body') Bio
                    textarea.form-control(name='editor1', style='visibility: hidden; display: none;')
