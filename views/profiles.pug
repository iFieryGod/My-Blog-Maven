          .col-md-3
            h3.text-center Your Avatar
            img.d-block.img-fluid.mb-3.ml-auto.mr-auto(src='./images/avatar.png', alt='avatar')
            button.btn.btn-primary.btn-block Edit Image
            button.btn.btn-danger.btn-block Delete Image
 include partials/footer2