extends layout2

block content
    // Header
    header#main-header.py-2.bg-info.text-white
      .container
        .row
          .col-md-6
            h1
              i.fas.fa-cog
              |  Dashboard
    // Functionality
    section.actions.py-3.mb-4.bg-light
      .container
        .row
          .col-md-3
            a.btn.btn-primary.btn-block(href='#', data-toggle='modal', data-target='#addPost')
              i.fas.fa-plus
              |  Add Post
          .col-md-3
            a.btn.btn-success.btn-block(href='#', data-toggle='modal', data-target='#addCategory')
              i.fas.fa-plus
              |  Add Category
          .col-md-3
            a.btn.btn-warning.btn-block(href='#', data-toggle='modal', data-target='#addUser')
              i.fas.fa-plus
              |  Add User
    section#actions.py-4.mb-4.bg-light
      .container
        .row
          .col
            .card
              .card-header
                h4 Chat Groups
              table.table.table-striped
                thead.thead-dark
                  tr
                    th Categories
                    th Date Posted
                    th Last Edited
                tbody
                  each category in categories
                    tr
                      td= category.name
                      td July 12, 2017
                      td July 13, 2017          
    // MOdals
    // Add Post Modal
    #addPost.modal.fade
      .modal-dialog.modal-lg
        .modal-content
          .modal-header.bg-primary.text-white
            h1.modal-title
              i.fa.fa-pencil
              |  Add Post
            button.close(data-dismiss='modal')
              span ×
          .modal-body
            form(method="post")
              .form-group
                label(for='title') Title
                input.form-control(name="title", type='text', placeholder="Enter a title")
              .form-group
                label(for='image') Upload Image
                .custom-file
                  input#image.custom-file-input(type='file')
                  label.custom-file-label(for='image') Choose file
                small.form-text.text-muted Max Size 5mb
              .form-group
                label(for='body') Body
                textarea.form-control(name='editor1', type="text")
                hr
                button.btn.btn-primary(type="submit") Save Changes
    // Category Modal
    #addCategory.modal.fade
      .modal-dialog.modal-lg
        .modal-content
          .modal-header.bg-success.text-white
            h1.modal-title
             i.fa.fa-folder
             |  Add Category
            button.close(data-dismiss='modal')
              span ×
          .modal-body
            form(method="post")
              .form-group
                label(for="name") Title:
                input.form-control(name="name", type='text', placeholder="Enter a name")
                small.text-muted Give your chat room a meaningful name for people to refer to it.
                hr
                button.btn.btn-success(type="submit") Save Changes
    // User Modal
    #addUser.modal.fade
      .modal-dialog.modal-lg
        .modal-content
          .modal-header.bg-warning.text-white
            h1.modal-title
             i.fa.fa-user
             |  Add User
            button.close(data-dismiss='modal')
              span ×
          .modal-body
            form
              .form-group
                label(for='title') Name
                input.form-control(type='text')
              .form-group
                label(for='title') Email
                input.form-control(type='email')
              .form-group
                label(for='title') Password
                input.form-control(type='password')
              .form-group
                label(for='title') Confirm Password
                input.form-control(type='password')
          .modal-footer
            button.btn.btn-warning(data-dismiss='modal') Save Changes
    include partials/footer2