extends layout2

block content
 header#main-header.py-2.text-white.edit-page-color
      .container
        .row
          .col-md-6
            h1
              i.fas.fa-user-edit
              |  Edit
 section#actions.py-4.mb-4.bg-light
      .container
        .row
          .col-md-3.mr-auto
            a.btn.edit-page-color.text-white(href='/blog-post')
              i.fa.fa-arrow-left
              |  Back To Blog
 section#post.mb-3
      .container
        .row
          .col
            .card
              .card-header
                h4 Edit Post
              .card-body
                form(method="post")
                  .form-group
                    label(for='title') Title
                    input.form-control(name="title", type='text', value=`${post.title}`)
                  .form-group
                    label(for='file') Image Upload
                    input.form-control-file(type='file')
                    small.form-test.text-muted Max Size 3MB
                  .form-group
                    label(for='message') Body
                    textarea.form-control(name='editor1')
                    button.btn.edit-page-color.text-white.mt-2(type="submit") Save Changes
 include partials/footer2