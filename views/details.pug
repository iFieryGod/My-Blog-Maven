extends layout2

block content
 header#main-header.py-2.bg-info.text-white
      .container
        .row
          .col-md-6
            h1
              i.fas.fa-user-edit
              |  Edit
 section#actions.py-4.mb-4.bg-light
      .container
        .row
          .col-md-3.mr-auto
            a.btn.btn-primary.btn-light(href='/dashboard')
              i.fa.fa-arrow-left
              |  Back To Dashboard
          .col-md-3
            a.btn.btn-success.btn-block(href='#')
              i.fa.fa-check
              |  Save Changes
          .col-md-3
            a.btn.btn-danger.btn-block(href='#')
              i.fa.fa-remove
              |  Delete Post
 section#post
      .container
        .row
          .col
            .card
              .card-header
                h4 Edit Post
              .card-body
                form
                  .form-group
                    label(for='title') Title
                    input.form-control(type='text', value='Post One')
                  .form-group
                    label(for='Title') Category
                    select.form-control
                      option(value='') Web Dev
                      option(value='') Tech Giant
                      option(value='') Busy Talk
                      option(value='') WhatsApp
                  .form-group
                    label(for='file') Image Upload
                    input.form-control-file(type='file')
                    small.form-test.text-muted Max Size 3MB
                  .form-group
                      textarea.form-control(name='editor1', style='visibility: hidden; display: none;')
